/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    Not(in=sel, out=selNot);
    And(a=a, b=selNot, out=caseA);
    And(a=b, b=sel, out=caseB);
    Or(a=caseA, b=caseB, out=out);
}